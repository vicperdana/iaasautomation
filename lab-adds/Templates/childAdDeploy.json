{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminPassword": {
      "type": "securestring",
      "metadata": { "description": "Admin password" }
    },
    "adminUsername": {
      "type": "string",
      "metadata": { "description": "Admin username" }
    },
    "deploymentNumber": {
      "type": "string",
      "defaultValue": "1",
      "metadata": { "description": "When deploying the stack N times, define the instance - this will be appended to some resource names to avoid collisions." }
    },
    "adSubnetName": {
      "type": "string",
      "defaultValue": "[concat('adSubnet', parameters('deploymentNumber'))]"
    },
    "childAdVMName": {
      "type": "string",
      "defaultValue": "AZAD"
    },
    "adDomainName": {
      "type": "string",
      "defaultValue": "contoso.com"
    },
    "childAdDomainName": {
      "type": "string",
      "defaultValue": "contoso.com"
    },
    "assetLocation": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "metadata": { "Description": "The region to deploy the resources into" }
    },
    "NetworkInterfaceName": {
      "type": "string",
      "defaultValue": "NIC",
      "metadata": { "description": "This is the prefix name of the Network interfaces" }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D1_v2",
      "metadata": { "description": "This is the allowed list of VM sizes" }
    },
    "vmsAutoShutdownTime": {
      "type": "string",
      "defaultValue": "1900",
      "minLength": 4,
      "maxLength": 4,
      "metadata": {
        "description": "The time at which VMs will be automatically shutdown (24h HHmm format). Set value to '9999' to NOT configure the auto shutdown."
      }
    },
    "vmsTimeZone": {
      "type": "string",
      "defaultValue": "AUS Eastern Standard Time",
      "minLength": 2,
      "metadata": {
        "description": "Time zone of the VMs. Type '[TimeZoneInfo]::GetSystemTimeZones().Id' in PowerShell to get the list. Note that 'UTC' works but 'UTC+xx' does NOT work."
      }
    }
  },
  "variables": {
    "DeployADTemplate": "DeployChildAD.ps1",
    "DeployADTemplateUri": "[concat(parameters('assetLocation'), 'Scripts/DeployChildAD.ps1')]",
    "adSubnetID": "[concat(variables('vnetID'),'/subnets/', parameters('adSubnetName'))]",
    "adSubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('adSubnetName'))]",
    "imageOffer": "WindowsServer",
    "imagePublisher": "MicrosoftWindowsServer",
    "imageSKU": "2016-Datacenter",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "adPubIPName": "[concat('childAdPubIP', parameters('deploymentNumber'))]",
    "adNicName": "[concat('childad-',parameters('NetworkInterfaceName'), parameters('deploymentNumber'))]",
    "updateip_templateUri" : "[concat(parameters('assetLocation'), 'Templates/nested/update-nic.json')]",
    "storageaccountType": "StandardSSD_LRS"    
  },
  "resources": [
    {
      "name": "[variables('adPubIPName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "adPubIP"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[tolower(concat(parameters('childAdVMName'), parameters('deploymentNumber')))]"
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('adNicName')]",
      "location": "[parameters('location')]",
      "tags": { "displayName": "childAdNIC" },
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('adPubIPName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig', parameters('deploymentNumber'))]",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('adSubnetID')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('adPubIPName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2018-04-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('childAdVMName')]",
      "location": "[parameters('location')]",
      "tags": { "displayName": "adVM" },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('adNicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('childAdVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[variables('storageaccountType')]"
           }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceid('Microsoft.Network/networkInterfaces', variables('adNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "DeployAD",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', concat(parameters('childAdVMName')))]"
          ],
          "tags": {
            "displayName": "DeployAD"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.9",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[variables('DeployADTemplateUri')]"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('DeployADTemplate'), ' ', parameters('adDomainName'), ' ', parameters('adminPassword'),' ', parameters('childAdDomainName'),' ', parameters('adminUsername'))]"
            }
          }
        }
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "updateIp",
      "apiVersion": "2017-08-01",
      "dependsOn": [
        "[variables('adNicName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('updateip_templateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nicName": {
            "value": "[variables('adNicName')]"
          },
          "SubnetRef": {
            "value": "[variables('adSubnetRef')]"
          },
          "privateIp": {
            "value": "[reference(concat('Microsoft.Network/networkInterfaces/', variables('adNicName'))).ipConfigurations[0].properties.privateIPAddress]"
          },
          "publicIPId" : {
            "value": "[resourceId('Microsoft.Network/publicIPAddresses', variables('adPubIPName'))]"
          }
        }
      }
    },
    {
      "condition": "[not(equals(parameters('vmsAutoShutdownTime'), '9999'))]",
      "type": "Microsoft.DevTestLab/schedules",
      "name": "[concat('shutdown-computevm-', parameters('childAdVMName'))]",
      "apiVersion": "2016-05-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('childAdVMName'))]"
      ],
      "properties": {
        "status": "Enabled",
        "taskType": "ComputeVmShutdownTask",
        "dailyRecurrence": {
          "time": "[parameters('vmsAutoShutdownTime')]"
        },
        "timeZoneId": "[parameters('vmsTimeZone')]",
        "notificationSettings": {
          "status": "Disabled",
          "timeInMinutes": 30
        },
        "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('childAdVMName'))]"
      }
    }
  ],
  "outputs": {
    "ADVMFQDN": {
        "type": "string",
        "value": "[reference(parameters('childAdVMName')).DnsSettings.Fqdn]"
    },
    "ADVMNIC": {
      "type": "object",
      "value": "[reference(resourceId('Microsoft.Network/networkInterfaces', variables('adNicName')))]"
  }
  }
}
